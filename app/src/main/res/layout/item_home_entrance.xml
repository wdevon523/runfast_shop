<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_5_dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/entrance_image"
            android:layout_width="@dimen/dimen_45_dp"
            android:layout_height="@dimen/dimen_45_dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_about" />

        <TextView
            android:id="@+id/entrance_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10_dp"
            android:singleLine="true"
            android:textColor="#80000000"
            android:textSize="@dimen/dimen_12_dp" />

    </LinearLayout>

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:background="@drawable/selector_trans_divider"/>-->

</FrameLayout>