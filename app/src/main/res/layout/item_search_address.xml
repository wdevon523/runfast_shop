<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_20_dp">


    <TextView
        android:id="@+id/tv_search_address_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/dimen_10_dp"
        android:layout_toLeftOf="@+id/tv_search_address_distance"
        android:textColor="@color/text_333333"
        android:textSize="@dimen/dimen_14_dp" />

    <TextView
        android:id="@+id/tv_search_address_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_search_address_name"
        android:layout_marginBottom="@dimen/dimen_10_dp"
        android:layout_marginTop="@dimen/dimen_8_dp"
        android:layout_toLeftOf="@+id/tv_search_address_distance"
        android:textColor="@color/text_999999"
        android:textSize="@dimen/dimen_12_dp" />

    <TextView
        android:id="@+id/tv_search_address_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_search_address_name"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/dimen_15_dp"
        android:layout_marginRight="@dimen/dimen_15_dp"
        android:textColor="@color/text_999999"
        android:textSize="@dimen/dimen_12_dp" />


</RelativeLayout>