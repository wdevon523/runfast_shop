<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_e5e5e5"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10_dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen_20_dp"
                android:paddingTop="@dimen/dimen_20_dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商家名称"
                        android:textColor="@color/text_999999"
                        android:textSize="@dimen/dimen_14_dp" />

                    <TextView
                        android:id="@+id/tv_refund_business_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_18_dp"
                        android:text="华莱士（银泰店）"
                        android:textColor="@color/text_333333"
                        android:textSize="@dimen/dimen_14_dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15_dp"
                    android:layout_marginTop="@dimen/dimen_20_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单号码"
                        android:textColor="@color/text_999999"
                        android:textSize="@dimen/dimen_14_dp" />

                    <TextView
                        android:id="@+id/tv_refund_order_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_18_dp"
                        android:text="w201805181417"
                        android:textColor="@color/text_333333"
                        android:textSize="@dimen/dimen_14_dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15_dp"
                    android:layout_marginTop="@dimen/dimen_20_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单退款"
                        android:textColor="@color/text_999999"
                        android:textSize="@dimen/dimen_14_dp" />

                    <TextView
                        android:id="@+id/tv_refund_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_18_dp"
                        android:text="¥20.6"
                        android:textColor="@color/text_fb4e44"
                        android:textSize="@dimen/dimen_14_dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10_dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40_dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dimen_15_dp"
                    android:text="退款流程"
                    android:textColor="@color/text_666666"
                    android:textSize="@dimen/dimen_14_dp" />

                <LinearLayout
                    android:id="@+id/ll_contain_process"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1_dp"
            android:background="@color/view_c4c4c4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_refund_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消退款"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_16_dp" />

            <View
                android:layout_width="@dimen/dimen_1_dp"
                android:layout_height="match_parent"
                android:background="@color/view_c4c4c4" />

            <TextView
                android:id="@+id/tv_contact_business"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="联系商家"
                android:textColor="@color/bg_fba42a"
                android:textSize="@dimen/dimen_16_dp" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>