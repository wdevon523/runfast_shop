<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_e5e5e5"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tv_submit"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_35_dp"
                    android:background="@color/view_e5e5e5"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dimen_15_dp"
                    android:text="退款原因"
                    android:textColor="@color/text_666666"
                    android:textSize="@dimen/dimen_14_dp" />

                <RelativeLayout
                    android:id="@+id/rl_refund_reason"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50_dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_refund_reason"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_15_dp"
                        android:text="请选择退款原因"
                        android:textColor="@color/text_333333"
                        android:textSize="@dimen/dimen_15_dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen_15_dp"
                        android:src="@drawable/icon_down" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_35_dp"
                    android:background="@color/view_e5e5e5"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dimen_15_dp"
                    android:text="退款来源"
                    android:textColor="@color/text_666666"
                    android:textSize="@dimen/dimen_14_dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50_dp"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_15_dp"
                        android:text="退回至您的支付账号"
                        android:textColor="@color/text_333333"
                        android:textSize="@dimen/dimen_15_dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen_15_dp"
                        android:src="@drawable/icon_agree_black" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_35_dp"
                    android:background="@color/view_e5e5e5"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dimen_15_dp"
                    android:text="退款类型"
                    android:textColor="@color/text_666666"
                    android:textSize="@dimen/dimen_14_dp"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/rl_refund_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50_dp"
                    android:background="@color/white"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_15_dp"
                        android:text="请选择退款类型"
                        android:textColor="@color/text_333333"
                        android:textSize="@dimen/dimen_15_dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen_15_dp"
                        android:src="@drawable/icon_down" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_35_dp"
                    android:background="@color/view_e5e5e5"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dimen_15_dp"
                    android:text="退款商品"
                    android:textColor="@color/text_666666"
                    android:textSize="@dimen/dimen_14_dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_business"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_40_dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimen_10_dp"
                        android:paddingRight="@dimen/dimen_10_dp">

                        <!--android:button="@drawable/selector_choose" />-->

                        <ImageView
                            android:id="@+id/iv_shopping_cart_business_logo"
                            android:layout_width="@dimen/dimen_20_dp"
                            android:layout_height="@dimen/dimen_20_dp"
                            android:layout_gravity="center"
                            android:src="@drawable/weibo_login" />

                        <TextView
                            android:id="@+id/tv_shopping_cart_business_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_8_dp"
                            android:drawablePadding="@dimen/dimen_10_dp"
                            android:drawableRight="@drawable/icon_right"
                            android:textColor="@color/text_333333"
                            android:textSize="@dimen/dimen_14_dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_shopping_cart_business_goods"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/dimen_15_dp" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dimen_10_dp">

                        <TextView
                            android:id="@+id/text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_40_dp"
                            android:text="配送费"
                            android:textColor="@color/text_333333"
                            android:textSize="@dimen/dimen_15_dp" />

                        <TextView
                            android:id="@+id/tv_send_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/text"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dimen_15_dp"
                            android:text="¥0"
                            android:textColor="@color/text_333333"
                            android:textSize="@dimen/dimen_15_dp" />

                        <TextView
                            android:id="@+id/tv_send_price_note"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/tv_send_price"
                            android:layout_marginRight="@dimen/dimen_15_dp"
                            android:layout_marginTop="@dimen/dimen_5_dp"
                            android:text="部分退，配送费不退回"
                            android:textColor="@color/text_999999"
                            android:textSize="@dimen/dimen_13_dp" />

                    </RelativeLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50_dp"
                    android:background="@color/white">

                    <CheckBox
                        android:id="@+id/cb_shoppingcart_business"
                        android:layout_width="@dimen/dimen_15_dp"
                        android:layout_height="@dimen/dimen_15_dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_15_dp"
                        android:background="@drawable/selector_choose"
                        android:button="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_10_dp"
                        android:layout_toRightOf="@+id/cb_shoppingcart_business"
                        android:text="全选"
                        android:textColor="@color/text_333333"
                        android:textSize="@dimen/dimen_13_dp" />

                    <TextView
                        android:id="@+id/tv_refund_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen_15_dp"
                        android:text="¥0"
                        android:textColor="@color/text_e85b4d"
                        android:textSize="@dimen/dimen_17_dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen_5_dp"
                        android:layout_toLeftOf="@+id/tv_refund_price"
                        android:text="退款金额"
                        android:textColor="@color/text_333333"
                        android:textSize="@dimen/dimen_17_dp" />

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50_dp"
            android:layout_alignParentBottom="true"
            android:background="@color/bg_fba42a"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_16_dp" />

    </RelativeLayout>

</LinearLayout>