<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_10_dp"
    android:layout_marginRight="@dimen/dimen_10_dp"
    android:layout_marginTop="8dp"
    android:background="@color/white"
    android:padding="@dimen/dimen_10_dp">

    <!--<ImageView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:scaleType="centerCrop"-->
    <!--android:src="@drawable/icon_bank_back"/>-->

    <ImageView
        android:id="@+id/iv_order_shop"
        android:layout_width="@dimen/dimen_40_dp"
        android:layout_height="@dimen/dimen_40_dp"
        android:src="@drawable/icon_not_shop_car" />


    <TextView
        android:id="@+id/tv_order_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10_dp"
        android:layout_toRightOf="@+id/iv_order_shop"
        android:drawablePadding="@dimen/dimen_10_dp"
        android:drawableRight="@drawable/icon_right"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:maxWidth="@dimen/dimen_150_dp"
        android:text="外婆烧(笛扬路店)"
        android:textColor="@color/text_333333"
        android:textSize="@dimen/dimen_15_dp" />

    <TextView
        android:id="@+id/tv_order_shop_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_order_shop_name"
        android:layout_alignParentRight="true"
        android:includeFontPadding="false"
        android:text="已完成"
        android:textColor="@color/color_text_gray"
        android:textSize="@dimen/dimen_13_dp" />

    <TextView
        android:id="@+id/tv_order_shop_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_order_shop"
        android:layout_alignLeft="@+id/tv_order_shop_name"
        android:text="2017-07-12  11:19"
        android:textColor="@color/color_text_gray"
        android:textSize="@dimen/dimen_11_dp" />

    <View
        android:id="@+id/view_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dp"
        android:layout_below="@+id/tv_order_shop_time"
        android:layout_marginLeft="@dimen/dimen_50_dp"
        android:layout_marginTop="@dimen/dimen_5_dp"
        android:background="@color/view_e5e5e5"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/linearLayout_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_one"
        android:layout_marginLeft="@dimen/dimen_50_dp"
        android:layout_marginTop="@dimen/dimen_10_dp"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/dimen_6_dp"
            android:layout_height="@dimen/dimen_6_dp"
            android:layout_marginTop="@dimen/dimen_9_dp"
            android:background="@drawable/dot_44be99"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_contain_goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout_goods"
        android:layout_marginLeft="@dimen/dimen_50_dp"
        android:layout_marginTop="@dimen/dimen_10_dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="@drawable/circle_yellow"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_order_shop_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="right"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_14_dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout_price"
        android:layout_marginLeft="@dimen/dimen_10_dp"
        android:layout_marginTop="@dimen/dimen_10_dp"
        android:gravity="center_vertical|end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_order_shop_complain"
            android:layout_width="78dp"
            android:layout_height="30dp"
            android:background="@drawable/text_button_background"
            android:gravity="center"
            android:text="去评价"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_14_dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_order_call_driver"
            android:layout_width="92dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/text_button_background"
            android:gravity="center"
            android:text="联系骑手"
            android:textColor="@color/text_333333"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_order_call_business"
            android:layout_width="92dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/text_button_background"
            android:gravity="center"
            android:text="联系商家"
            android:textColor="@color/text_333333"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_order_confirm_completed"
            android:layout_width="92dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/text_button_background"
            android:gravity="center"
            android:text="确认收货"
            android:textColor="@color/text_333333"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_order_shop_again"
            android:layout_width="92dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_button_orange"
            android:gravity="center"
            android:text="再来一单"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_14_dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_order_pay_now"
            android:layout_width="92dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/text_button_orange_background"
            android:gravity="center"
            android:text="立即支付"
            android:textColor="@color/color_orange_select"
            android:textSize="@dimen/dimen_14_dp"
            android:visibility="gone" />

    </LinearLayout>


</RelativeLayout>