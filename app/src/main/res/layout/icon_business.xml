<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_map_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_order_status"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_map_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_3_dp"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_15_dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="@dimen/dimen_37_dp"
        android:layout_height="@dimen/dimen_40_dp"
        android:background="@drawable/bg_logo">

        <com.gxuc.runfast.shop.view.CircleImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/dimen_30_dp"
            android:layout_height="@dimen/dimen_30_dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_2_dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_default_head" />

    </RelativeLayout>

</LinearLayout>