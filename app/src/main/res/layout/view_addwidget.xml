<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignTop="@id/tv_price"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_sub"
        android:layout_width="@dimen/dimen_24_dp"
        android:layout_height="@dimen/dimen_24_dp"
        android:layout_gravity="right"
        android:padding="2dp"
        android:src="@drawable/icon_delete_product" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_gravity="right"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:alpha="0"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/text_333333"
        android:textSize="@dimen/dimen_13_dp" />

    <com.gxuc.runfast.shop.view.AddButton
        android:id="@+id/addbutton"
        android:layout_width="@dimen/dimen_21_dp"
        android:layout_height="@dimen/dimen_21_dp"
        android:layout_gravity="right|center_vertical" />

</LinearLayout>