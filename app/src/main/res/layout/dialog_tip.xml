<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dp"
        android:paddingLeft="@dimen/dimen_15_dp"
        android:paddingRight="@dimen/dimen_15_dp">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="取消"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_14_dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="小费"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_16_dp" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="确定"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_14_dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dp"
        android:background="@color/view_e5e5e5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20_dp"
        android:layout_marginRight="@dimen/dimen_20_dp"
        android:layout_marginTop="@dimen/dimen_20_dp">

        <TextView
            android:id="@+id/tv_no_tip"
            android:layout_width="100dp"
            android:layout_height="@dimen/dimen_35_dp"
            android:background="@drawable/round_biankuang_cccccc"
            android:gravity="center"
            android:text="不加了"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_15_dp" />

        <TextView
            android:id="@+id/tv_two"
            android:layout_width="100dp"
            android:layout_height="@dimen/dimen_35_dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_biankuang_cccccc"
            android:gravity="center"
            android:text="¥ 2"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_15_dp" />

        <TextView
            android:id="@+id/tv_five"
            android:layout_width="100dp"
            android:layout_height="@dimen/dimen_35_dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/round_biankuang_cccccc"
            android:gravity="center"
            android:text="¥ 5"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_15_dp" />

        <TextView
            android:id="@+id/tv_ten"
            android:layout_width="100dp"
            android:layout_height="@dimen/dimen_35_dp"
            android:layout_below="@+id/tv_two"
            android:layout_marginTop="@dimen/dimen_10_dp"
            android:background="@drawable/round_biankuang_cccccc"
            android:gravity="center"
            android:text="¥ 10"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_15_dp" />

        <TextView
            android:id="@+id/tv_fifteen"
            android:layout_width="100dp"
            android:layout_height="@dimen/dimen_35_dp"
            android:layout_alignBottom="@+id/tv_ten"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_biankuang_cccccc"
            android:gravity="center"
            android:text="¥ 15"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_15_dp" />

        <TextView
            android:id="@+id/tv_twenty"
            android:layout_width="100dp"
            android:layout_height="@dimen/dimen_35_dp"
            android:layout_alignBottom="@+id/tv_ten"
            android:layout_alignParentRight="true"
            android:background="@drawable/round_biankuang_cccccc"
            android:gravity="center"
            android:text="¥ 20"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_15_dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_order_tip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_35_dp"
        android:layout_marginLeft="@dimen/dimen_20_dp"
        android:layout_marginRight="@dimen/dimen_20_dp"
        android:layout_marginTop="@dimen/dimen_10_dp"
        android:background="@drawable/round_biankuang_cccccc">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他金额: ¥ "
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_15_dp" />

            <EditText
                android:id="@+id/et_orther_tip"
                android:layout_width="wrap_content"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="   "
                android:maxLength="3" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20_dp"
        android:layout_gravity="center_horizontal"
        android:text="最高200元"
        android:layout_marginBottom="@dimen/dimen_20_dp"/>

</LinearLayout>