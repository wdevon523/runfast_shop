<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_join" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_15_dp"
                android:text="请填写代理商基本信息"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_18_dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_30_dp"
                android:layout_marginTop="@dimen/dimen_20_dp"
                android:text="公司信息"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_18_dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_30_dp"
                android:layout_marginTop="@dimen/dimen_20_dp"
                android:text="意向代理城市"
                android:textColor="@color/text_666666"
                android:textSize="@dimen/dimen_14_dp" />

            <EditText
                android:id="@+id/et_city"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_36_dp"
                android:layout_marginLeft="@dimen/dimen_30_dp"
                android:layout_marginRight="@dimen/dimen_30_dp"
                android:layout_marginTop="@dimen/dimen_5_dp"
                android:background="@drawable/round_biankuang_cccccc"
                android:hint="请输入城市搜索"
                android:inputType="number"
                android:paddingLeft="@dimen/dimen_10_dp"
                android:textColor="@color/text_333333"
                android:textColorHint="@color/text_cccccc"
                android:textSize="@dimen/dimen_14_dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_30_dp"
                android:layout_marginTop="@dimen/dimen_20_dp"
                android:text="您的名字"
                android:textColor="@color/text_666666"
                android:textSize="@dimen/dimen_14_dp" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_36_dp"
                android:layout_marginLeft="@dimen/dimen_30_dp"
                android:layout_marginRight="@dimen/dimen_30_dp"
                android:layout_marginTop="@dimen/dimen_5_dp"
                android:background="@drawable/round_biankuang_cccccc"
                android:hint="请输入您的名字"
                android:inputType="number"
                android:paddingLeft="@dimen/dimen_10_dp"
                android:textColor="@color/text_333333"
                android:textColorHint="@color/text_cccccc"
                android:textSize="@dimen/dimen_14_dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_30_dp"
                android:layout_marginTop="@dimen/dimen_20_dp"
                android:text="您的联系电话"
                android:textColor="@color/text_666666"
                android:textSize="@dimen/dimen_14_dp" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_36_dp"
                android:layout_marginLeft="@dimen/dimen_30_dp"
                android:layout_marginRight="@dimen/dimen_30_dp"
                android:layout_marginTop="@dimen/dimen_5_dp"
                android:background="@drawable/round_biankuang_cccccc"
                android:hint="请输入您的联系电话"
                android:inputType="number"
                android:paddingLeft="@dimen/dimen_10_dp"
                android:textColor="@color/text_333333"
                android:textColorHint="@color/text_cccccc"
                android:textSize="@dimen/dimen_14_dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_30_dp"
                android:layout_marginTop="@dimen/dimen_20_dp"
                android:text="是否有相关资源或经验的介绍"
                android:textColor="@color/text_666666"
                android:textSize="@dimen/dimen_14_dp" />

            <EditText
                android:id="@+id/et_introduce"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_90_dp"
                android:layout_marginLeft="@dimen/dimen_30_dp"
                android:layout_marginRight="@dimen/dimen_30_dp"
                android:layout_marginTop="@dimen/dimen_5_dp"
                android:background="@drawable/round_biankuang_cccccc"
                android:inputType="number"
                android:paddingLeft="@dimen/dimen_10_dp"
                android:textColor="@color/text_333333"
                android:textColorHint="@color/text_cccccc"
                android:textSize="@dimen/dimen_14_dp" />

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45_dp"
                android:layout_marginLeft="@dimen/dimen_30_dp"
                android:layout_marginRight="@dimen/dimen_30_dp"
                android:layout_marginTop="@dimen/dimen_40_dp"
                android:background="@drawable/bg_fb7d30"
                android:gravity="center"
                android:text="提交申请"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_16_dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>