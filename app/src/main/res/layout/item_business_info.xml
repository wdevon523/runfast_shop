<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rb="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_breakfast_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dp"
        android:background="@color/view_e5e5e5" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <ImageView
                android:id="@+id/iv_business_logo"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/image_background"
                android:src="@drawable/icon_default_head" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_business_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="肯德基宅急送"
                    android:textColor="@color/color_address_black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_26_dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_business_open"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.willy.ratingbar.ScaleRatingBar
                            android:id="@+id/rb_order_evaluate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            rb:drawableEmpty="@drawable/icon_unselected"
                            rb:drawableFilled="@drawable/icon_selected"
                            rb:numStars="5"
                            rb:starPadding="1dp" />

                        <TextView
                            android:id="@+id/tv_business_levelId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:text="4.3"
                            android:textColor="@color/color_text_gray_two"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_business_sales_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:text="月售1289单"
                            android:textSize="@dimen/dimen_13_dp"
                            android:textColor="@color/color_text_gray_two" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_business_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dimen_5_dp"
                            android:paddingRight="@dimen/dimen_5_dp"
                            android:paddingTop="@dimen/dimen_2_dp"
                            android:paddingBottom="@dimen/dimen_2_dp"
                            android:background="@drawable/round_biankuang_999999"
                            android:gravity="center"
                            android:text="休息中"
                            android:textSize="@dimen/dimen_13_dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_sale_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.8km"
                            android:textColor="@color/color_text_gray_two" />

                        <TextView

                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:background="#e5e5e5" />

                        <TextView
                            android:id="@+id/tv_sale_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="60分钟"
                            android:textColor="@color/color_text_gray_two" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_sale_startPay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥ 20起送"
                        android:textColor="@color/color_text_gray_two" />

                    <TextView
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:background="#e5e5e5" />

                    <TextView
                        android:id="@+id/tv_sale_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="配送费¥3"
                        android:textColor="@color/color_text_gray_two" />

                    <ImageView
                        android:id="@+id/iv_is_charge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_express_car" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_contain_act"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:orientation="vertical" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/view_close"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_80ffffff"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout>
