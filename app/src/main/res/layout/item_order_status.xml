<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <View
            android:id="@+id/view_top_line"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_above="@+id/iv_status"
            android:layout_centerHorizontal="true"
            android:background="@color/view_e5e5e5" />

        <ImageView
            android:id="@+id/iv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="2dip" />

        <View
            android:id="@+id/view_bottom_line"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/iv_status"
            android:layout_centerHorizontal="true"
            android:background="@color/view_e5e5e5" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_20_dp"
        android:paddingRight="@dimen/dimen_30_dp"
        android:paddingTop="@dimen/dimen_20_dp">

        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_10_dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/tv_order_time"
            android:textColor="@color/text_666666"
            android:textSize="@dimen/dimen_15_dp" />

        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/text_999999"
            android:textSize="@dimen/dimen_11_dp" />

    </RelativeLayout>

</LinearLayout>