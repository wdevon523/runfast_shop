<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_15_dp"
        android:paddingRight="@dimen/dimen_15_dp"
        android:paddingBottom="@dimen/dimen_10_dp"
        android:paddingTop="@dimen/dimen_10_dp">


        <ImageView
            android:id="@+id/iv_order_detail_goods_image"
            android:layout_width="@dimen/dimen_55_dp"
            android:layout_height="@dimen/dimen_55_dp" />

        <TextView
            android:id="@+id/tv_order_detail_good_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10_dp"
            android:layout_toLeftOf="@+id/tv_order_detail_good_price"
            android:layout_toRightOf="@+id/iv_order_detail_goods_image"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="香辣鸡腿堡"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_14_dp" />

        <TextView
            android:id="@+id/tv_order_detail_good_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_order_detail_good_name"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:textColor="@color/text_999999"
            android:textSize="@dimen/dimen_11_dp" />

        <LinearLayout
            android:id="@+id/ll_order_act"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_order_detail_goods_image"
            android:layout_alignLeft="@+id/tv_order_detail_good_name"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_order_detail_good_act"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_order_detail_good_act"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:textColor="@color/text_666666"
                android:textSize="@dimen/dimen_13_dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_order_detail_good_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_order_detail_goods_image"
            android:layout_alignLeft="@+id/tv_order_detail_good_name"
            android:includeFontPadding="false"
            android:text="x1"
            android:textColor="@color/text_666666"
            android:textSize="@dimen/dimen_14_dp" />

        <TextView
            android:id="@+id/tv_order_detail_good_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_order_detail_good_name"
            android:layout_alignParentRight="true"
            android:includeFontPadding="false"
            android:text="¥ 3"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_14_dp" />

        <TextView
            android:id="@+id/tv_order_detail_good_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_order_detail_good_price"
            android:includeFontPadding="false"
            android:text="¥ 3"
            android:textColor="@color/text_666666"
            android:textSize="@dimen/dimen_13_dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/dimen_5_dp"/>

</LinearLayout>