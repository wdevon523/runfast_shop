<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f3f4f5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10_dp"
        android:layout_marginRight="@dimen/dimen_10_dp"
        android:layout_marginTop="@dimen/dimen_10_dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40_dp"
            android:paddingLeft="@dimen/dimen_15_dp"
            android:paddingRight="@dimen/dimen_15_dp">

            <TextView
                android:id="@+id/tv_cargo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="卡布奇诺 拿铁"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_14_dp" />

            <TextView
                android:id="@+id/tv_delivery_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="待付款"
                android:textColor="@color/text_fc9153"
                android:textSize="@dimen/dimen_14_dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1_dp"
            android:background="@color/view_e5e5e5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_15_dp">

            <ImageView
                android:id="@+id/image_buy"
                android:layout_width="@dimen/dimen_20_dp"
                android:layout_height="@dimen/dimen_20_dp"
                android:src="@drawable/icon_selected" />

            <TextView
                android:id="@+id/tv_buy_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_17_dp"
                android:layout_marginRight="@dimen/dimen_17_dp"
                android:layout_toLeftOf="@+id/image_one"
                android:layout_toRightOf="@+id/image_buy"
                android:text="卡布奇诺 拿铁"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_15_dp" />

            <ImageView
                android:id="@+id/image_one"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_20_dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_right" />

            <ImageView
                android:id="@+id/image_send"
                android:layout_width="@dimen/dimen_20_dp"
                android:layout_height="@dimen/dimen_20_dp"
                android:layout_below="@+id/tv_buy_address"
                android:layout_marginTop="@dimen/dimen_20_dp"
                android:src="@drawable/icon_selected" />

            <TextView
                android:id="@+id/tv_send_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/image_send"
                android:layout_marginLeft="@dimen/dimen_17_dp"
                android:layout_marginRight="@dimen/dimen_17_dp"
                android:layout_toRightOf="@+id/image_send"
                android:text="卡布奇诺 拿铁"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_15_dp" />


            <TextView
                android:id="@+id/tv_send_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_send_address"
                android:layout_below="@+id/tv_send_address"
                android:layout_marginTop="@dimen/dimen_10_dp"
                android:text="卡布奇诺 拿铁"
                android:textColor="@color/text_999999"
                android:textSize="@dimen/dimen_13_dp" />

            <TextView
                android:id="@+id/tv_send_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_send_name"
                android:layout_marginLeft="@dimen/dimen_20_dp"
                android:layout_toRightOf="@+id/tv_send_name"
                android:text="18986998686"
                android:textColor="@color/text_999999"
                android:textSize="@dimen/dimen_13_dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1_dp"
            android:background="@color/view_e5e5e5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50_dp"
            android:paddingLeft="@dimen/dimen_15_dp"
            android:paddingRight="@dimen/dimen_15_dp">

            <TextView
                android:id="@+id/tv_delivery_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="2018-02-27"
                android:textColor="@color/text_666666"
                android:textSize="@dimen/dimen_13_dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_10_dp"
                android:layout_toRightOf="@+id/tv_delivery_order_time"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pay_now"
                    android:layout_width="@dimen/dimen_92_dp"
                    android:layout_height="@dimen/dimen_30_dp"
                    android:background="@drawable/bg_pay_now"
                    android:gravity="center"
                    android:text="立即支付"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_14_dp" />

                <TextView
                    android:id="@+id/tv_buy_again"
                    android:layout_width="@dimen/dimen_92_dp"
                    android:layout_height="@dimen/dimen_30_dp"
                    android:layout_marginLeft="@dimen/dimen_10_dp"
                    android:background="@drawable/round_biankuang_cccccc"
                    android:gravity="center"
                    android:text="再来一单"
                    android:textColor="@color/text_333333"
                    android:textSize="@dimen/dimen_13_dp" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>