<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dimen_15_dp">

        <TextView
            android:id="@+id/tv_user_address_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_5_dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingBottom="@dimen/dimen_3_dp"
            android:paddingLeft="@dimen/dimen_8_dp"
            android:paddingRight="@dimen/dimen_8_dp"
            android:paddingTop="@dimen/dimen_3_dp"
            android:textSize="@dimen/dimen_10_dp"
            android:visibility="gone" />

        <com.hedan.textdrawablelibrary.TextViewDrawable
            android:id="@+id/tv_user_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_user_address_tag"
            android:layout_marginRight="@dimen/dimen_10_dp"
            android:layout_toRightOf="@+id/tv_user_address_tag"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="龙华商务大厦"
            android:textColor="@color/color_address_black"
            android:textSize="@dimen/dimen_14_dp"
            android:textStyle="bold"
            app:isAliganCenter="false" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_user_title"
            android:layout_marginTop="@dimen/dimen_12_dp"
            android:text="李先生"
            android:textColor="@color/color_text_gray"
            android:textSize="@dimen/dimen_12_dp" />

        <TextView
            android:id="@+id/tv_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_user_name"
            android:layout_marginLeft="@dimen/dimen_20_dp"
            android:layout_toRightOf="@+id/tv_user_name"
            android:text="18312345678"
            android:textColor="@color/color_text_gray"
            android:textSize="@dimen/dimen_12_dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/color_food_gray"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dp"
        android:layout_marginLeft="@dimen/dimen_15_dp"
        android:background="@color/view_e5e5e5" />

</LinearLayout>