<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_order_man_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dimen_20_dp"
            android:gravity="center_horizontal"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_20_dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/dimen_8_dp"
            android:layout_height="@dimen/dimen_20_dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_5_dp"
            android:layout_toRightOf="@+id/tv_order_man_state"
            android:src="@drawable/icon_right_black" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_man_deliver_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5_dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="预计送达时间"
            android:textColor="@color/text_999999"
            android:textSize="@dimen/dimen_12_dp" />

        <TextView
            android:id="@+id/tv_man_deliver_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="11:04"
            android:textColor="@color/color_orange_select"
            android:textSize="@dimen/dimen_12_dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_20_dp"
        android:layout_marginLeft="@dimen/dimen_15_dp"
        android:layout_marginRight="@dimen/dimen_15_dp"
        android:layout_marginTop="@dimen/dimen_5_dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_buy_again"
            android:layout_width="80dp"
            android:layout_height="@dimen/dimen_32_dp"
            android:layout_margin="@dimen/dimen_3_dp"
            android:background="@drawable/shape_button_orange"
            android:text="再来一单"
            android:textColor="@color/white"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_pay_now"
            android:layout_width="80dp"
            android:layout_height="@dimen/dimen_32_dp"
            android:layout_margin="@dimen/dimen_3_dp"
            android:background="@drawable/shape_button_pay_white"
            android:text="立即支付"
            android:textColor="@color/text_333333"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_confirm_completed"
            android:layout_width="80dp"
            android:layout_height="@dimen/dimen_32_dp"
            android:layout_margin="@dimen/dimen_3_dp"
            android:background="@drawable/shape_button_pay_white"
            android:text="确认收货"
            android:textColor="@color/text_333333"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_cancel_order"
            android:layout_width="80dp"
            android:layout_height="@dimen/dimen_32_dp"
            android:layout_margin="@dimen/dimen_3_dp"
            android:background="@drawable/shape_button_pay_white"
            android:text="取消订单"
            android:textColor="@color/text_333333"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_appraise"
            android:layout_width="80dp"
            android:layout_height="@dimen/dimen_32_dp"
            android:layout_margin="@dimen/dimen_3_dp"
            android:background="@drawable/shape_button_orange"
            android:text="评价"
            android:textColor="@color/white"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_driver_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_75_dp"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1_dp"
            android:background="@color/view_e5e5e5" />

        <com.gxuc.runfast.shop.view.CircleImageView
            android:id="@+id/iv_driver_avater"
            android:layout_width="@dimen/dimen_40_dp"
            android:layout_height="@dimen/dimen_40_dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_15_dp"
            android:src="@drawable/icon_driver_avater" />

        <TextView
            android:id="@+id/tv_driver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10_dp"
            android:layout_toRightOf="@+id/iv_driver_avater" />


        <TextView
            android:id="@+id/tv_driver_type"
            android:layout_width="@dimen/dimen_50_dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10_dp"
            android:layout_toRightOf="@+id/tv_driver_name"
            android:background="@drawable/icon_orange_back"
            android:gravity="center"
            android:padding="2dp"
            android:text="快车专送"
            android:textColor="@color/color_white"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/btn_contact_driver"
            android:layout_width="@dimen/dimen_35_dp"
            android:layout_height="@dimen/dimen_35_dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_15_dp"
            android:padding="@dimen/dimen_5_dp"
            android:src="@drawable/icon_call_phone" />

    </RelativeLayout>

</LinearLayout>