<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_food_gray"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".fragment.BusinessInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@color/color_white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_business_address" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="地址："
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_14_dp" />

            <TextView
                android:id="@+id/tv_business_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_14_dp" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_e5e5e5"
            android:paddingLeft="@dimen/dimen_15_dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/color_white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_business_phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="经营品类："
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_14_dp" />

            <TextView
                android:id="@+id/tv_business_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="西式快餐"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_14_dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_e5e5e5"
            android:paddingLeft="@dimen/dimen_15_dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/color_white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_business_phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="电话："
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_14_dp" />

            <TextView
                android:id="@+id/tv_business_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_14_dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_e5e5e5"
            android:paddingLeft="@dimen/dimen_15_dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_business_introduce" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="商家公告："
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_14_dp" />

            <TextView
                android:id="@+id/tv_business_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_14_dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_e5e5e5"
            android:paddingLeft="@dimen/dimen_15_dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/color_white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_business_time" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="配送时间："
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_14_dp" />

            <TextView
                android:id="@+id/tv_distribution_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:00 - 20:30"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_14_dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_e5e5e5"
            android:paddingLeft="@dimen/dimen_15_dp" />

        <RelativeLayout
            android:id="@+id/rl_business_licence"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48_dp"
            android:background="@color/color_white"
            android:paddingLeft="@dimen/dimen_15_dp"
            android:paddingRight="@dimen/dimen_15_dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_business_licence" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_27_dp"
                android:text="营业资质"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_14_dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_right" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_e5e5e5"
            android:paddingLeft="@dimen/dimen_15_dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/color_white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_business_pay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="支持在线支付"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_14_dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_take_self"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/color_white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_take_self" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="支持到店自取"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_14_dp" />

        </LinearLayout>


        <!--<com.gxuc.runfast.shop.view.ZFlowLayout-->
        <!--android:id="@+id/ll_img_contain"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="@dimen/dimen_10_dp" />-->

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
