<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <com.example.supportv1.widget.CircleImageView
            android:id="@+id/iv_business_avater"
            android:layout_width="@dimen/dimen_65_dp"
            android:layout_height="@dimen/dimen_65_dp"
            android:layout_marginTop="@dimen/dimen_38_dp"
            android:src="@drawable/icon_default_head" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12_dp"
            android:text="支付成功"
            android:textColor="@color/text_fb7d30"
            android:textSize="@dimen/dimen_17_dp" />

        <TextView
            android:id="@+id/tv_pay_business_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_35_dp"
            android:text="肯德基宅急送"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_17_dp" />

        <TextView
            android:id="@+id/tv_pay_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15_dp"
            android:text="¥11.00"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_42_dp" />

        <TextView
            android:id="@+id/tv_pay_finish"
            android:layout_width="163dp"
            android:layout_height="@dimen/dimen_35_dp"
            android:layout_marginTop="@dimen/dimen_90_dp"
            android:background="@color/text_fb7d30"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_15_dp" />

    </LinearLayout>

</RelativeLayout>