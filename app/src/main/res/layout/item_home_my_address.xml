<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dimen_15_dp">

        <TextView
            android:id="@+id/tv_my_address_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_5_dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingBottom="@dimen/dimen_3_dp"
            android:paddingLeft="@dimen/dimen_8_dp"
            android:paddingRight="@dimen/dimen_8_dp"
            android:paddingTop="@dimen/dimen_3_dp"
            android:textSize="@dimen/dimen_10_dp"
            android:visibility="gone" />

        <com.hedan.textdrawablelibrary.TextViewDrawable
            android:id="@+id/tv_my_address_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_my_address_tag"
            android:layout_toRightOf="@+id/tv_my_address_tag"
            android:includeFontPadding="false"
            android:lineSpacingExtra="@dimen/dimen_3_dp"
            android:maxLines="2"
            android:text="都市经典8栋502"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_14_dp"
            android:textStyle="bold"
            app:isAliganCenter="false" />

        <TextView
            android:id="@+id/tv_my_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_my_address_detail"
            android:layout_marginTop="@dimen/dimen_12_dp"
            android:includeFontPadding="false"
            android:text="吴彦祖 先生"
            android:textColor="@color/text_999999"
            android:textSize="@dimen/dimen_14_dp" />

        <TextView
            android:id="@+id/tv_my_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_my_name"
            android:layout_marginLeft="@dimen/dimen_15_dp"
            android:layout_toRightOf="@+id/tv_my_name"
            android:includeFontPadding="false"
            android:text="18686868686"
            android:textColor="@color/text_999999"
            android:textSize="@dimen/dimen_14_dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dp"
        android:layout_marginLeft="@dimen/dimen_15_dp"
        android:background="@color/view_e5e5e5" />

</LinearLayout>