<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/dimen_15_dp">

    <TextView
        android:id="@+id/tv_my_address_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/dimen_6_dp"
        android:includeFontPadding="false"
        android:text="都市经典8栋502"
        android:textColor="@color/text_333333"
        android:textSize="@dimen/dimen_14_dp" />

    <TextView
        android:id="@+id/tv_my_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_my_address_detail"
        android:layout_marginTop="@dimen/dimen_12_dp"
        android:includeFontPadding="false"
        android:text="吴彦祖 先生"
        android:textColor="@color/text_999999"
        android:textSize="@dimen/dimen_14_dp" />

    <TextView
        android:id="@+id/tv_my_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_my_name"
        android:layout_marginLeft="@dimen/dimen_20_dp"
        android:layout_toRightOf="@+id/tv_my_name"
        android:includeFontPadding="false"
        android:text="18686868686"
        android:textColor="@color/text_999999"
        android:textSize="@dimen/dimen_14_dp" />


</RelativeLayout>