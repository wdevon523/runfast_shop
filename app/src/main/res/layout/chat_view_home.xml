<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_receive_order"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/icon_home_receive_order">

    <com.gxuc.runfast.shop.view.CircleImageView
        android:id="@+id/iv_home_business_logo"
        android:layout_width="@dimen/dimen_32_dp"
        android:layout_height="@dimen/dimen_30_dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_7_dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_5_dp"
        android:layout_toRightOf="@+id/iv_home_business_logo"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_home_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_11_dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_deliver_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_3_dp"
            android:includeFontPadding="false"
            android:textColor="@color/text_666666"
            android:textSize="@dimen/dimen_9_dp" />

    </LinearLayout>


</RelativeLayout>