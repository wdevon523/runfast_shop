<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dp"
        android:paddingLeft="@dimen/dimen_15_dp"
        android:paddingRight="@dimen/dimen_15_dp">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="取消"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_14_dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="物品类型"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_16_dp" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="确定"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_14_dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dp"
        android:background="@color/view_e5e5e5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_20_dp">

        <TextView
            android:id="@+id/tv_flower"
            android:layout_width="100dp"
            android:layout_height="@dimen/dimen_35_dp"
            android:background="@drawable/round_biankuang_cccccc"
            android:gravity="center"
            android:text="鲜花"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_15_dp" />

        <TextView
            android:id="@+id/tv_food"
            android:layout_width="100dp"
            android:layout_height="@dimen/dimen_35_dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_biankuang_cccccc"
            android:gravity="center"
            android:text="餐饮"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_15_dp" />

        <TextView
            android:id="@+id/tv_fresh"
            android:layout_width="100dp"
            android:layout_height="@dimen/dimen_35_dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/round_biankuang_cccccc"
            android:gravity="center"
            android:text="生鲜"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_15_dp" />

        <TextView
            android:id="@+id/tv_file"
            android:layout_width="100dp"
            android:layout_height="@dimen/dimen_35_dp"
            android:layout_below="@+id/tv_flower"
            android:layout_marginTop="@dimen/dimen_10_dp"
            android:background="@drawable/round_biankuang_cccccc"
            android:gravity="center"
            android:text="文件"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_15_dp" />

        <TextView
            android:id="@+id/tv_key"
            android:layout_width="100dp"
            android:layout_height="@dimen/dimen_35_dp"
            android:layout_alignBottom="@+id/tv_file"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_biankuang_cccccc"
            android:gravity="center"
            android:text="钥匙"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_15_dp" />

        <TextView
            android:id="@+id/tv_orther"
            android:layout_width="100dp"
            android:layout_height="@dimen/dimen_35_dp"
            android:layout_alignBottom="@+id/tv_file"
            android:layout_alignParentRight="true"
            android:background="@drawable/round_biankuang_cccccc"
            android:gravity="center"
            android:text="其他"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_15_dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dp"
        android:layout_marginLeft="@dimen/dimen_15_dp"
        android:layout_marginRight="@dimen/dimen_15_dp"
        android:background="@color/view_e5e5e5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_15_dp"
        android:text="重量"
        android:textColor="@color/text_333333"
        android:textSize="@dimen/dimen_16_dp" />

    <TextView
        android:id="@+id/tv_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_15_dp"
        android:text="小于5公斤"
        android:textColor="@color/text_ff9f14"
        android:textSize="@dimen/dimen_22_dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_50_dp">

        <SeekBar
            android:id="@+id/sb_weight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_35_dp"
            android:layout_marginLeft="@dimen/dimen_70_dp"
            android:layout_marginRight="@dimen/dimen_70_dp"
            android:max="15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sb_weight"
            android:layout_marginLeft="@dimen/dimen_58_dp"
            android:text="小于5公斤"
            android:textColor="@color/text_666666"
            android:textSize="@dimen/dimen_13_dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/sb_weight"
            android:layout_marginRight="@dimen/dimen_58_dp"
            android:text="20公斤"
            android:textColor="@color/text_666666"
            android:textSize="@dimen/dimen_13_dp" />


    </RelativeLayout>

</LinearLayout>