<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dimen_5_dp"
    android:paddingBottom="@dimen/dimen_5_dp"
    android:paddingLeft="@dimen/dimen_15_dp"
    android:paddingRight="@dimen/dimen_15_dp">

    <TextView
        android:id="@+id/tv_enjoy_act"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:includeFontPadding="false"
        android:drawableLeft="@drawable/icon_reduce"
        android:drawablePadding="@dimen/dimen_5_dp"
        android:text="满减优惠"
        android:textColor="@color/text_333333"
        android:textSize="@dimen/dimen_13_dp" />

    <TextView
        android:id="@+id/tv_enjoy_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="- ¥ 0"
        android:textColor="@color/text_fb4e44"
        android:textSize="@dimen/dimen_13_dp"
        android:textStyle="bold" />

</RelativeLayout>