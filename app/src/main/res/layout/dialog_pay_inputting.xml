<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_300_dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dp">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_15_dp"
            android:src="@drawable/icon_close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="请输入支付密码"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_18_dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dp"
        android:background="@color/text_fb7d30" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_business_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_15_dp"
            android:text="肯德基"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_15_dp" />

        <TextView
            android:id="@+id/tv_pay_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_10_dp"
            android:text="¥11.00"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_39_dp" />

        <EditText
            android:id="@+id/et_pay_password"
            android:layout_width="246dp"
            android:layout_height="@dimen/dimen_42_dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_10_dp"
            android:background="@drawable/round_biankuang_999999"
            android:inputType="textPassword"
            android:lines="1"
            android:paddingLeft="@dimen/dimen_10_dp" />

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="246dp"
            android:layout_height="@dimen/dimen_42_dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dimen_15_dp"
            android:layout_marginTop="@dimen/dimen_20_dp"
            android:background="@color/text_fb7d30"
            android:gravity="center"
            android:text="支付"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </LinearLayout>


</LinearLayout>