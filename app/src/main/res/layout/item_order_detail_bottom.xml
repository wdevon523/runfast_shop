<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dp_10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dimen_15_dp">

        <LinearLayout
            android:id="@+id/ll_order_detail_deliver_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="期望时间"
                android:textColor="@color/text_999999"
                android:textSize="@dimen/dimen_14_dp" />

            <TextView
                android:id="@+id/tv_order_detail_deliver_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15_dp"
                android:text="立即配送"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_14_dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15_dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配送地址"
                android:textColor="@color/text_999999"
                android:textSize="@dimen/dimen_14_dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15_dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_order_detail_man_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_333333"
                    android:textSize="@dimen/dimen_14_dp" />

                <TextView
                    android:id="@+id/tv_order_detail_man_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5_dp"
                    android:textColor="@color/text_333333"
                    android:textSize="@dimen/dimen_14_dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10_dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配送服务"
                android:textColor="@color/text_999999"
                android:textSize="@dimen/dimen_14_dp" />

            <TextView
                android:id="@+id/tv_order_detail_deliver_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15_dp"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_14_dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10_dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dimen_15_dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="订单号码"
                android:textColor="@color/text_999999"
                android:textSize="@dimen/dimen_14_dp" />

            <TextView
                android:id="@+id/tv_order_detail_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_15_dp"
                android:layout_toRightOf="@+id/text_order_num"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_14_dp" />

            <TextView
                android:id="@+id/tv_copy"
                android:layout_width="@dimen/dimen_50_dp"
                android:layout_height="@dimen/dimen_23_dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_editext_e5e5e5"
                android:gravity="center"
                android:text="复制"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_12_dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10_dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单时间"
                android:textColor="@color/text_999999"
                android:textSize="@dimen/dimen_14_dp" />

            <TextView
                android:id="@+id/tv_order_detail_creat_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15_dp"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_14_dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_order_detail_pay_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10_dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付方式"
                android:textColor="@color/text_999999"
                android:textSize="@dimen/dimen_14_dp" />

            <TextView
                android:id="@+id/tv_order_detail_pat_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15_dp"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_14_dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10_dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单备注"
                android:textColor="@color/text_999999"
                android:textSize="@dimen/dimen_14_dp" />

            <TextView
                android:id="@+id/tv_order_detail_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15_dp"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_14_dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>