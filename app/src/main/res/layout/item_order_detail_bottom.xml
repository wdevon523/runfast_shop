<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dp_10"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10_dp"
        android:layout_marginLeft="@dimen/dimen_15_dp"
        android:layout_marginTop="@dimen/dimen_20_dp"
        android:text="其他信息"
        android:textColor="@color/order_detail_state"
        android:textSize="@dimen/dimen_13_dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dp">

        <TextView
            style="@style/order_detail_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="配送方" />

        <TextView
            android:id="@+id/tv_order_detail_deliver_type"
            style="@style/order_detail_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dimen_15_dp"
        android:background="@color/color_line_back" />

    <RelativeLayout
        android:id="@+id/rl_order_detail_deliver_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dp">

        <TextView
            style="@style/order_detail_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="预计送达时间" />

        <TextView
            android:id="@+id/tv_order_detail_deliver_time"
            style="@style/order_detail_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dimen_15_dp"
        android:background="@color/color_line_back" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dimen_70_dp">

        <TextView
            android:id="@+id/text_address"
            style="@style/order_detail_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货信息" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dimen_3_dp"
            android:layout_toRightOf="@+id/text_address"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_order_detail_man_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dimen_15_dp"
                android:layout_marginTop="@dimen/dimen_20_dp"
                android:textColor="@color/order_detail_text_right"
                android:textSize="@dimen/dimen_13_dp" />

            <TextView
                android:id="@+id/tv_order_detail_man_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/dimen_10_dp"
                android:layout_marginRight="@dimen/dimen_15_dp"
                android:layout_marginTop="@dimen/dimen_5_dp"
                android:textColor="@color/order_detail_text_right"
                android:textSize="@dimen/dimen_13_dp" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dimen_15_dp"
        android:background="@color/color_line_back" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dp">

        <TextView
            style="@style/order_detail_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="订单号" />

        <TextView
            android:id="@+id/tv_order_detail_number"
            style="@style/order_detail_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dimen_15_dp"
        android:background="@color/color_line_back" />

    <RelativeLayout
        android:id="@+id/rl_order_detail_pay_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dp">

        <TextView
            style="@style/order_detail_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="支付方式" />

        <TextView
            android:id="@+id/tv_order_detail_pat_type"
            style="@style/order_detail_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dimen_15_dp"
        android:background="@color/color_line_back" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dimen_50_dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_15_dp"
            android:text="备注"
            android:textSize="@dimen/dimen_13_dp" />

        <TextView
            android:id="@+id/tv_order_detail_remark"
            style="@style/order_detail_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_18_dp"
            android:layout_toRightOf="@+id/textView2" />
    </RelativeLayout>

</LinearLayout>