<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_10_dp"
        android:background="@color/view_e5e5e5" />

    <LinearLayout
        android:id="@+id/ll_too_far"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_10_dp"
        android:paddingRight="@dimen/dimen_10_dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_32_dp"
            android:gravity="center_vertical"
            android:text="不在配送范围商家"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_17_dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_24_dp">

            <TextView
                android:id="@+id/tv_out_of_range_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/icon_business_address"
                android:drawablePadding="@dimen/dimen_8_dp"
                android:text="龙华商务大厦"
                android:textColor="@color/text_666666"
                android:textSize="@dimen/dimen_14_dp" />

            <LinearLayout
                android:id="@+id/ll_open_close"
                android:layout_width="@dimen/dimen_54_dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/round_biankuang_cccccc"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_open_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimen_3_dp"
                    android:drawableRight="@drawable/icon_down_arrow"
                    android:gravity="center"
                    android:text="打开"
                    android:textColor="@color/text_333333"
                    android:textSize="@dimen/dimen_12_dp" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_business"
        android:paddingLeft="@dimen/dimen_10_dp"
        android:paddingRight="@dimen/dimen_10_dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30_dp"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/cb_shoppingcart_business"
            android:layout_width="@dimen/dimen_16_dp"
            android:layout_height="@dimen/dimen_16_dp"
            android:layout_marginRight="@dimen/dimen_9_dp"
            android:background="@drawable/selector_choose"
            android:button="@null" />
        <!--android:button="@drawable/selector_choose" />-->

        <ImageView
            android:id="@+id/iv_shopping_cart_business_logo"
            android:layout_width="@dimen/dimen_20_dp"
            android:layout_height="@dimen/dimen_20_dp"
            android:layout_gravity="center"
            android:src="@drawable/weibo_login" />

        <TextView
            android:id="@+id/tv_shopping_cart_business_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8_dp"
            android:drawablePadding="@dimen/dimen_10_dp"
            android:drawableRight="@drawable/icon_right"
            android:text="华莱士（银泰店）"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/dimen_14_dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_shopping_cart_business_act"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_35_dp"
        android:paddingRight="@dimen/dimen_10_dp"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/ll_shopping_cart_business_goods"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dimen_10_dp"
        android:paddingRight="@dimen/dimen_10_dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_10_dp"
        android:paddingRight="@dimen/dimen_10_dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_36_dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_25_dp"
                android:text="包装费"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_14_dp" />

            <TextView
                android:id="@+id/tv_shopping_cart_business_pack_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_15_dp"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_14_dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_preferential"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_25_dp"
                android:text="优惠"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_14_dp" />

            <TextView
                android:id="@+id/tv_shopping_cart_business_preferential_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_15_dp"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_14_dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1_dp"
            android:layout_marginLeft="@dimen/dimen_25_dp"
            android:layout_marginTop="@dimen/dimen_10_dp"
            android:background="@color/view_e5e5e5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50_dp">

            <TextView
                android:id="@+id/tv_shopping_cart_business_total_preferential"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_25_dp"
                android:text="已优惠10元"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_14_dp" />

            <TextView
                android:id="@+id/tv_shopping_cart_pay"
                android:layout_width="@dimen/dimen_80_dp"
                android:layout_height="@dimen/dimen_30_dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_15_dp"
                android:background="@drawable/bg_fb7d30"
                android:gravity="center"
                android:text="去结算"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_12_dp" />

            <TextView
                android:id="@+id/tv_shopping_cart_business_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_10_dp"
                android:layout_toLeftOf="@+id/tv_shopping_cart_pay"
                android:textColor="@color/text_fb4e44"
                android:textSize="@dimen/dimen_20_dp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
