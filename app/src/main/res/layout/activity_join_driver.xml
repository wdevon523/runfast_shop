<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_join_driver" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_15_dp"
                android:text="骑手应聘信息申请表"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/dimen_18_dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_30_dp"
                android:layout_marginTop="@dimen/dimen_20_dp"
                android:text="姓名"
                android:textColor="@color/text_666666"
                android:textSize="@dimen/dimen_14_dp" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_36_dp"
                android:layout_marginLeft="@dimen/dimen_30_dp"
                android:layout_marginRight="@dimen/dimen_30_dp"
                android:layout_marginTop="@dimen/dimen_5_dp"
                android:background="@drawable/round_biankuang_cccccc"
                android:paddingLeft="@dimen/dimen_10_dp"
                android:textColor="@color/text_333333"
                android:textColorHint="@color/text_cccccc"
                android:textSize="@dimen/dimen_14_dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_30_dp"
                android:layout_marginTop="@dimen/dimen_20_dp"
                android:text="性别"
                android:textColor="@color/text_666666"
                android:textSize="@dimen/dimen_14_dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_36_dp"
                android:layout_marginLeft="@dimen/dimen_30_dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_man"
                    android:layout_width="@dimen/dimen_20_dp"
                    android:layout_height="@dimen/dimen_20_dp"
                    android:button="@drawable/selector_gender"
                    android:checked="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男"
                    android:textColor="@color/text_333333"
                    android:textSize="@dimen/dimen_13_dp" />

                <CheckBox
                    android:id="@+id/cb_woman"
                    android:layout_width="@dimen/dimen_20_dp"
                    android:layout_height="@dimen/dimen_20_dp"
                    android:layout_marginLeft="@dimen/dimen_40_dp"
                    android:button="@drawable/selector_gender" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女"
                    android:textColor="@color/text_333333"
                    android:textSize="@dimen/dimen_13_dp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_30_dp"
                android:layout_marginTop="@dimen/dimen_20_dp"
                android:text="身份证号"
                android:textColor="@color/text_666666"
                android:textSize="@dimen/dimen_14_dp" />

            <EditText
                android:id="@+id/et_id_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_36_dp"
                android:layout_marginLeft="@dimen/dimen_30_dp"
                android:layout_marginRight="@dimen/dimen_30_dp"
                android:layout_marginTop="@dimen/dimen_5_dp"
                android:background="@drawable/round_biankuang_cccccc"
                android:inputType="number"
                android:paddingLeft="@dimen/dimen_10_dp"
                android:textColor="@color/text_333333"
                android:textColorHint="@color/text_cccccc"
                android:textSize="@dimen/dimen_14_dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_30_dp"
                android:layout_marginTop="@dimen/dimen_20_dp"
                android:text="年龄"
                android:textColor="@color/text_666666"
                android:textSize="@dimen/dimen_14_dp" />

            <EditText
                android:id="@+id/et_age"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_36_dp"
                android:layout_marginLeft="@dimen/dimen_30_dp"
                android:layout_marginRight="@dimen/dimen_30_dp"
                android:layout_marginTop="@dimen/dimen_5_dp"
                android:background="@drawable/round_biankuang_cccccc"
                android:inputType="number"
                android:paddingLeft="@dimen/dimen_10_dp"
                android:textColor="@color/text_333333"
                android:textColorHint="@color/text_cccccc"
                android:textSize="@dimen/dimen_14_dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_30_dp"
                android:layout_marginTop="@dimen/dimen_20_dp"
                android:text="手机号"
                android:textColor="@color/text_666666"
                android:textSize="@dimen/dimen_14_dp" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_36_dp"
                android:layout_marginLeft="@dimen/dimen_30_dp"
                android:layout_marginRight="@dimen/dimen_30_dp"
                android:layout_marginTop="@dimen/dimen_5_dp"
                android:background="@drawable/round_biankuang_cccccc"
                android:inputType="number"
                android:paddingLeft="@dimen/dimen_10_dp"
                android:textColor="@color/text_333333"
                android:textColorHint="@color/text_cccccc"
                android:textSize="@dimen/dimen_14_dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_30_dp"
                android:layout_marginTop="@dimen/dimen_20_dp"
                android:text="短信验证码"
                android:textColor="@color/text_666666"
                android:textSize="@dimen/dimen_14_dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40_dp"
                android:layout_marginLeft="@dimen/dimen_30_dp"
                android:layout_marginRight="@dimen/dimen_30_dp"
                android:layout_marginTop="@dimen/dimen_5_dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="190dp"
                    android:layout_height="@dimen/dimen_36_dp"
                    android:layout_marginRight="@dimen/dimen_10_dp"
                    android:background="@drawable/round_biankuang_cccccc"
                    android:inputType="number"
                    android:textColor="@color/text_333333"
                    android:textSize="@dimen/dimen_14_dp" />

                <TextView
                    android:id="@+id/tv_get_code"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_36_dp"
                    android:background="@drawable/bg_fb7d30"
                    android:gravity="center"
                    android:text="发送验证码"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_14_dp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_30_dp"
                android:layout_marginTop="@dimen/dimen_20_dp"
                android:text="期望工作的城市"
                android:textColor="@color/text_666666"
                android:textSize="@dimen/dimen_14_dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40_dp"
                android:layout_marginLeft="@dimen/dimen_30_dp"
                android:layout_marginRight="@dimen/dimen_30_dp"
                android:layout_marginTop="@dimen/dimen_5_dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_choose_province"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_36_dp"
                    android:layout_marginRight="@dimen/dimen_10_dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_biankuang_cccccc"
                    android:drawableRight="@drawable/icon_bottom_arrow"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:padding="@dimen/dimen_10_dp"
                    android:text="请选择省份"
                    android:textColor="@color/text_999999"
                    android:textSize="@dimen/dimen_14_dp" />

                <TextView
                    android:id="@+id/tv_choose_city"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_36_dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_biankuang_cccccc"
                    android:drawableRight="@drawable/icon_bottom_arrow"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dimen_10_dp"
                    android:text="请选择城市"
                    android:textColor="@color/text_999999"
                    android:textSize="@dimen/dimen_14_dp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_30_dp"
                android:layout_marginTop="@dimen/dimen_20_dp"
                android:text="是否有物流或者外卖送餐经验"
                android:textColor="@color/text_666666"
                android:textSize="@dimen/dimen_14_dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_36_dp"
                android:layout_marginLeft="@dimen/dimen_30_dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_experience_yes"
                    android:layout_width="@dimen/dimen_20_dp"
                    android:layout_height="@dimen/dimen_20_dp"
                    android:button="@drawable/selector_gender"
                    android:checked="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是"
                    android:textColor="@color/text_333333"
                    android:textSize="@dimen/dimen_13_dp" />

                <CheckBox
                    android:id="@+id/cb_experience_no"
                    android:layout_width="@dimen/dimen_20_dp"
                    android:layout_height="@dimen/dimen_20_dp"
                    android:layout_marginLeft="@dimen/dimen_40_dp"
                    android:button="@drawable/selector_gender" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="否"
                    android:textColor="@color/text_333333"
                    android:textSize="@dimen/dimen_13_dp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_30_dp"
                android:layout_marginTop="@dimen/dimen_20_dp"
                android:text="工作意向"
                android:textColor="@color/text_666666"
                android:textSize="@dimen/dimen_14_dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_36_dp"
                android:layout_marginLeft="@dimen/dimen_30_dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_full_time"
                    android:layout_width="@dimen/dimen_20_dp"
                    android:layout_height="@dimen/dimen_20_dp"
                    android:button="@drawable/selector_gender"
                    android:checked="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全职"
                    android:textColor="@color/text_333333"
                    android:textSize="@dimen/dimen_13_dp" />

                <CheckBox
                    android:id="@+id/cb_part_time"
                    android:layout_width="@dimen/dimen_20_dp"
                    android:layout_height="@dimen/dimen_20_dp"
                    android:layout_marginLeft="@dimen/dimen_40_dp"
                    android:button="@drawable/selector_gender" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="兼职"
                    android:textColor="@color/text_333333"
                    android:textSize="@dimen/dimen_13_dp" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="110dp"
                android:layout_height="@dimen/dimen_40_dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_40_dp"
                android:layout_marginBottom="@dimen/dimen_40_dp"
                android:background="@drawable/bg_fb7d30"
                android:gravity="center"
                android:text="确认提交"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_16_dp" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>