<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_50_dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_hout_minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_30_dp"
        android:textColor="@color/text_333333"
        android:textSize="@dimen/dimen_14_dp" />

    <TextView
        android:id="@+id/tv_delivery_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_40_dp"
        android:textColor="@color/text_333333"
        android:textSize="@dimen/dimen_14_dp" />

    <ImageView
        android:id="@+id/iv_check_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_15_dp"
        android:src="@drawable/icon_check_time"
        android:visibility="visible" />

</RelativeLayout>